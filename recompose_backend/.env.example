# Database Configuration
# PostgreSQL connection string using asyncpg driver
DATABASE_URL=postgresql+asyncpg://user:password@localhost/recompose

# OpenAI Configuration
# Your OpenAI API key (required for email rewriting functionality)
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenAI Model Configuration
# Model to use for email rewriting (default: gpt-4o)
OPENAI_MODEL=gpt-4o
# Maximum tokens for OpenAI responses (default: 1000)
OPENAI_MAX_TOKENS=1000
# Temperature setting for OpenAI (0.0-2.0, default: 0.7)
OPENAI_TEMPERATURE=0.7

# JWT Authentication Configuration
# Secret key for JWT token signing (CHANGE IN PRODUCTION - use a strong random string)
JWT_SECRET=your-secret-key-change-in-production
# JWT algorithm (default: HS256)
JWT_ALGORITHM=HS256
# JWT token expiration time in hours (default: 24)
JWT_EXPIRATION_HOURS=24

# CORS Configuration
# Comma-separated list of allowed origins for CORS
# Example: CORS_ORIGINS=http://localhost:3000,https://your-app.vercel.app
CORS_ORIGINS=http://localhost:3000

# Application Configuration
# Application name
APP_NAME=ReCompose AI Backend
# Application version
APP_VERSION=1.0.0
# Debug mode (set to "true" for development, "false" for production)
DEBUG=False

# Billing Feature Flag
# Set to "true" to enable billing endpoints (default: false)
BILLING_ENABLED=false
